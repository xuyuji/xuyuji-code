<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
	<display-name></display-name>
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>

	<servlet>
		<servlet-name>XFireServlet</servlet-name>
		<display-name>XFireServlet</display-name>
		<servlet-class>org.codehaus.xfire.transport.http.XFireConfigurableServlet</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>SayHello</servlet-name>
		<servlet-class>demo.servlet.SayHello</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>SayHello2</servlet-name>
		<servlet-class>demo.servlet.SayHello2</servlet-class>
	</servlet>


	<servlet-mapping>
		<servlet-name>XFireServlet</servlet-name>
		<url-pattern>/servlet/XFireServlet/*</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>XFireServlet</servlet-name>
		<url-pattern>/services/*</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>SayHello</servlet-name>
		<url-pattern>/SayHello</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>SayHello2</servlet-name>
		<url-pattern>/SayHello2</url-pattern>
	</servlet-mapping>

</web-app>
